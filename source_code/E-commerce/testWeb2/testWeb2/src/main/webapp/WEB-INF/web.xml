<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>testWeb</display-name>
  <servlet>
     <servlet-name>LoginServlet</servlet-name>
     <servlet-class>testWeb.servlet.UserLoginServlet</servlet-class>
  </servlet>
  
  
 <welcome-file-list>
   <welcome-file>/login.jsp</welcome-file>
 </welcome-file-list>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/getuser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRobotsServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserRobotsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRobotsServlet</servlet-name>
        <url-pattern>/robots</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRobotServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserRobotServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRobotServlet</servlet-name>
        <url-pattern>/robot</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RobotSaveServlet</servlet-name>
        <servlet-class>testWeb.servlet.RobotSaveServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RobotSaveServlet</servlet-name>
        <url-pattern>/saveRobot</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserChangeServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserChangeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserChangeServlet</servlet-name>
        <url-pattern>/changeaccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLogoutServlet</servlet-name>
        <servlet-class>testWeb.servlet.UserLogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>testWeb.servlet.ImageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDataServlet</servlet-name>
        <servlet-class>testWeb.servlet.GetDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetDataServlet</servlet-name>
        <url-pattern>/getdata</url-pattern>
    </servlet-mapping>
    
   </web-app>